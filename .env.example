# T.E.A.S 2 Environment Variables

# Interface Mode Configuration
# Options: main (full-featured), minimal (basic), simple (user-friendly)
TAES_INTERFACE_MODE=main

# Server Configuration
TAES_SERVER_NAME=0.0.0.0
TAES_SERVER_PORT=7860
TAES_SHARE_GRADIO=false
TAES_DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/taes2_db

# LLM Configuration [Any ONE]
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
OLLAMA_BASE_URL=http://localhost:11434

# Default LLM Settings
DEFAULT_MODEL=gpt-3.5-turbo
DEFAULT_TEMPERATURE=0.3
DEFAULT_MAX_TOKENS=2000

# Application Settings
BATCH_SIZE=32
MAX_UPLOAD_SIZE=100
VECTOR_DIMENSION=384
